<script>
const flashDatabase = {
"FTS-101": { status: "Out for Delivery", time: "Updated 2 hours ago" },
"FTS-102": { status: "In Transit to Akure Hub", time: "Updated 5 hours ago" },
"FTS-103": { status: "Package Picked Up", time: "Updated 10 minutes ago" }
};

function trackParcel() {
const input = document.getElementById('trackingInput').value.trim().toUpperCase();
const container = document.getElementById('resultContainer');
const statusDisplay = document.getElementById('statusText');
const timeDisplay = document.getElementById('updateTime');

container.classList.remove('hidden');

if (flashDatabase[input]) {
statusDisplay.innerText = flashDatabase[input].status;
statusDisplay.className = "text-2xl font-bold mt-1 text-green-400";
timeDisplay.innerText = flashDatabase[input].time;
} else {
statusDisplay.innerText = "Invalid ID";
statusDisplay.className = "text-2xl font-bold mt-1 text-red-400";
timeDisplay.innerText = "Please check your code and try again.";
}
}
</script>
